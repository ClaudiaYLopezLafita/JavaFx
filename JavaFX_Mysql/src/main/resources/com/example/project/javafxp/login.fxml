<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="259.0" prefWidth="266.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.javafxp.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <GridPane prefHeight="168.0" prefWidth="308.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="29.0" minHeight="10.0" prefHeight="26.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="44.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="28.0" minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="42.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nombre: ">
               <padding>
                  <Insets left="4.0" />
               </padding>
            </Label>
            <Label text="Password:" GridPane.rowIndex="2">
               <padding>
                  <Insets left="4.0" />
               </padding>
            </Label>
            <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" />
            <TextField fx:id="txtName" GridPane.rowIndex="1" />
            <Button fx:id="btEnviar" mnemonicParsing="false" onAction="#btEnviarClick" text="Enviar" GridPane.rowIndex="4" />
            <Button fx:id="btLimpiar" mnemonicParsing="false" onAction="#btLimpiarClick" text="Borrar" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
      </GridPane>
      <Button  fx:id="btSalir" alignment="CENTER" mnemonicParsing="false" onAction="#btSalirClick" prefHeight="24.0" prefWidth="132.0" text="Salir">
         <padding>
            <Insets right="10.0" />
         </padding>
         <VBox.margin>
            <Insets right="60.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
